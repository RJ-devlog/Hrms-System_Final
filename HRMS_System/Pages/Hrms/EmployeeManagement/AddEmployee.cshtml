@page
@model HRMS_System.Pages.Dashboard.EmployeeManagement.AddEmployeeModel
@{
    ViewData["Title"] = "Add New Employee";
    Layout = null;
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<div class="container mt-4">
    <h3 class="mb-3">Add New Employee</h3>
    <hr />

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- ID NUMBER -->
        <div class="mb-3">
            <label asp-for="Employee.UserIdNumber" class="form-label"></label>
            <input asp-for="Employee.UserIdNumber" class="form-control" />
            <span asp-validation-for="Employee.UserIdNumber" class="text-danger"></span>
        </div>

        <!-- NAME -->
        <div class="row">
            <div class="col-md-4 mb-3">
                <label asp-for="Employee.FirstName"></label>
                <input asp-for="Employee.FirstName" class="form-control" />
                <span asp-validation-for="Employee.FirstName" class="text-danger"></span>
            </div>

            <div class="col-md-4 mb-3">
                <label asp-for="Employee.MiddleName"></label>
                <input asp-for="Employee.MiddleName" class="form-control" />
            </div>

            <div class="col-md-4 mb-3">
                <label asp-for="Employee.LastName"></label>
                <input asp-for="Employee.LastName" class="form-control" />
                <span asp-validation-for="Employee.LastName" class="text-danger"></span>
            </div>
        </div>

        <!-- EMAIL & PHONE -->
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Employee.Email"></label>
                <input asp-for="Employee.Email" class="form-control" />
                <span asp-validation-for="Employee.Email" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Employee.PhoneNumber"></label>
                <input asp-for="Employee.PhoneNumber" class="form-control" />
                <span asp-validation-for="Employee.PhoneNumber" class="text-danger"></span>
            </div>
        </div>

        <!-- PERSONAL INFO -->
        <div class="row">
            <div class="col-md-4 mb-3">
                <label asp-for="Employee.BirthDate"></label>
                <input asp-for="Employee.BirthDate" type="date" class="form-control" />
                <span asp-validation-for="Employee.BirthDate" class="text-danger"></span>
            </div>

            <div class="col-md-4 mb-3">
                <label asp-for="Employee.Gender"></label>
                <select asp-for="Employee.Gender" class="form-control">
                    <option value="">-- Select Gender --</option>
                    <option>Male</option>
                    <option>Female</option>
                </select>
                <span asp-validation-for="Employee.Gender" class="text-danger"></span>
            </div>

            <div class="col-md-4 mb-3">
                <label asp-for="Employee.CivilStatus"></label>
                <select asp-for="Employee.CivilStatus" class="form-control">
                    <option value="">-- Select Status --</option>
                    <option>Single</option>
                    <option>Married</option>
                    <option>Widowed</option>
                </select>
                <span asp-validation-for="Employee.CivilStatus" class="text-danger"></span>
            </div>
        </div>

        <!-- WORK INFORMATION -->
        <h6 class="mt-3">Working Information</h6>

        <div class="row">
            <div class="col-md-4 mb-3">
                <label asp-for="Employee.JobRole"></label>
                <input asp-for="Employee.JobRole" class="form-control" />
                <span asp-validation-for="Employee.JobRole" class="text-danger"></span>
            </div>

            <div class="col-md-4 mb-3">
                <label asp-for="Employee.Department"></label>
                <input asp-for="Employee.Department" class="form-control" />
                <span asp-validation-for="Employee.Department" class="text-danger"></span>
            </div>

            <div class="col-md-4 mb-3">
                <label asp-for="Employee.EmployeeType"></label>
                <select asp-for="Employee.EmployeeType" class="form-control">
                    <option value="">-- Select Type --</option>
                    <option>Employee</option>
                    <option>Contractual</option>
                    <option>Intern</option>
                </select>
                <span asp-validation-for="Employee.EmployeeType" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4 mb-3">
                <label asp-for="Employee.WorkHoursType"></label>
                <select asp-for="Employee.WorkHoursType" class="form-control">
                    <option value="">-- Select Hours --</option>
                    <option>Full-time</option>
                    <option>Part-time</option>
                </select>
                <span asp-validation-for="Employee.WorkHoursType" class="text-danger"></span>
            </div>

            <div class="col-md-4 mb-3">
                <label asp-for="Employee.Schedule"></label>
                <input asp-for="Employee.Schedule" class="form-control"
                       placeholder="e.g. Mon – Fri" />
                <span asp-validation-for="Employee.Schedule" class="text-danger"></span>
            </div>

            <div class="col-md-4 mb-3">
                <label asp-for="Employee.StartDate"></label>
                <input asp-for="Employee.StartDate" type="date" class="form-control" />
                <span asp-validation-for="Employee.StartDate" class="text-danger"></span>
            </div>
        </div>

        <!-- STATUS -->
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Employee.EmploymentStatus"></label>
                <select asp-for="Employee.EmploymentStatus" class="form-control">
                    <option value="">-- Select Employment Status --</option>
                    <option>Regular</option>
                    <option>Probationary</option>
                </select>
                <span asp-validation-for="Employee.EmploymentStatus" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Employee.Status"></label>
                <select asp-for="Employee.Status" class="form-control">
                    <option>Active</option>
                    <option>Inactive</option>
                </select>
                <span asp-validation-for="Employee.Status" class="text-danger"></span>
            </div>
        </div>

        <!-- ADDRESS -->
        <div class="mb-3">
            <label asp-for="Employee.Address"></label>
            <input asp-for="Employee.Address" class="form-control" />
            <span asp-validation-for="Employee.Address" class="text-danger"></span>
        </div>
        <!-- BUTTONS -->
        <button type="submit" class="btn btn-primary">
            Save Employee
        </button> 
        <a asp-page="/Dashboard/EmployeeManagement/index" class="btn btn-secondary">
            Cancel
        </a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
