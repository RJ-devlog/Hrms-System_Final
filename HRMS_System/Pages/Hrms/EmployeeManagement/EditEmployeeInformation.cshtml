@page "{id:int}"
@model HRMS_System.Pages.Dashboard.EmployeeManagement.EditEmployeeInfoModel
@{
    ViewData["Title"] = "Edit Employee";
    Layout = null;
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<script>
    function previewProfileImage(input) {
        if (input.files && input.files[0]) {
            const reader = new FileReader();
            reader.onload = e => {
                document.getElementById("profilePreview").src = e.target.result;
            };
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>

<div class="container mt-4">
    <h3 class="mb-3">Edit Employee</h3>
    <hr />

    <!--  FORM START -->
    <form method="post" id="editEmployeeForm" enctype="multipart/form-data">

        <input type="hidden" asp-for="Employee.id" />

        <!-- PROFILE IMAGE -->
        <div class="mb-4">
            <label class="form-label">Profile Image (Optional)</label>

            <div class="d-flex align-items-center gap-3">
                <img id="profilePreview"
                     src="@(string.IsNullOrEmpty(Model.Employee.ProfileImagePath)
                                                 ? "/images/default-avatar.png"
                                                 : Model.Employee.ProfileImagePath)"
                     class="rounded-circle border"
                     style="width:80px;height:80px;object-fit:cover;" />

                <div>
                    <input type="file"
                           asp-for="ProfileImage"
                           accept="image/*"
                           class="form-control"
                           onchange="previewProfileImage(this)" />
                    <small class="text-muted">
                        JPG / PNG, max 2MB
                    </small>
                </div>
            </div>
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- ID NUMBER -->
        <div class="mb-3">
            <label asp-for="Employee.UserIdNumber"></label>
            <input asp-for="Employee.UserIdNumber" class="form-control" />
            <span asp-validation-for="Employee.UserIdNumber" class="text-danger"></span>
        </div>

        <!-- NAME -->
        <div class="row">
            <div class="col-md-4 mb-3">
                <label asp-for="Employee.FirstName"></label>
                <input asp-for="Employee.FirstName" class="form-control" />
            </div>

            <div class="col-md-4 mb-3">
                <label asp-for="Employee.MiddleName"></label>
                <input asp-for="Employee.MiddleName" class="form-control" />
            </div>

            <div class="col-md-4 mb-3">
                <label asp-for="Employee.LastName"></label>
                <input asp-for="Employee.LastName" class="form-control" />
            </div>
        </div>

        <!-- EMAIL & PHONE -->
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Employee.Email"></label>
                <input asp-for="Employee.Email" class="form-control" />
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Employee.PhoneNumber"></label>
                <input asp-for="Employee.PhoneNumber" class="form-control" />
            </div>
        </div>

        <!-- PERSONAL INFO -->
        <div class="row">
            <div class="col-md-4 mb-3">
                <label asp-for="Employee.BirthDate"></label>
                <input asp-for="Employee.BirthDate" type="date" class="form-control" />
            </div>

            <div class="col-md-4 mb-3">
                <label asp-for="Employee.Gender"></label>
                <select asp-for="Employee.Gender" class="form-control">
                    <option value="">-- Select Gender --</option>
                    <option>Male</option>
                    <option>Female</option>
                </select>
            </div>

            <div class="col-md-4 mb-3">
                <label asp-for="Employee.CivilStatus"></label>
                <select asp-for="Employee.CivilStatus" class="form-control">
                    <option value="">-- Select Status --</option>
                    <option>Single</option>
                    <option>Married</option>
                    <option>Widowed</option>
                </select>
            </div>
        </div>

        <!-- WORK INFORMATION -->
        <h6 class="mt-3">Working Information</h6>

        <div class="row">
            <div class="col-md-4 mb-3">
                <label asp-for="Employee.JobRole"></label>
                <input asp-for="Employee.JobRole" class="form-control" />
            </div>

            <div class="col-md-4 mb-3">
                <label asp-for="Employee.Department"></label>
                <input asp-for="Employee.Department" class="form-control" />
            </div>

            <div class="col-md-4 mb-3">
                <label asp-for="Employee.EmployeeType"></label>
                <select asp-for="Employee.EmployeeType" class="form-control">
                    <option value="">-- Select Type --</option>
                    <option>Employee</option>
                    <option>Contractual</option>
                    <option>Intern</option>
                </select>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4 mb-3">
                <label asp-for="Employee.WorkHoursType"></label>
                <select asp-for="Employee.WorkHoursType" class="form-control">
                    <option value="">-- Select Hours --</option>
                    <option>Full-time</option>
                    <option>Part-time</option>
                </select>
            </div>

            <div class="col-md-4 mb-3">
                <label asp-for="Employee.Schedule"></label>
                <input asp-for="Employee.Schedule" class="form-control" />
            </div>

            <div class="col-md-4 mb-3">
                <label asp-for="Employee.StartDate"></label>
                <input asp-for="Employee.StartDate" type="date" class="form-control" />
            </div>
        </div>

        <!-- STATUS -->
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Employee.EmploymentStatus"></label>
                <select asp-for="Employee.EmploymentStatus" class="form-control">
                    <option value="">-- Select Status --</option>
                    <option>Regular</option>
                    <option>Probationary</option>
                </select>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Employee.Status"></label>
                <select asp-for="Employee.Status" class="form-control">
                    <option>Active</option>
                    <option>Inactive</option>
                </select>
            </div>
        </div>

        <!-- TENURE -->
        <div class="mb-3">
            <label class="form-label">Tenure</label>
            <input type="text"
                   class="form-control"
                   value="@(Model.Employee.TenureMonths.HasValue
                                          ? Model.Employee.TenureMonths + " months"
                                          : "Auto-calculated")"
                   readonly />
        </div>

        <!-- ADDRESS -->
        <div class="mb-3">
            <label asp-for="Employee.Address"></label>
            <input asp-for="Employee.Address" class="form-control" />
        </div>

        <!-- BUTTONS -->
        <button type="button"
                class="btn btn-primary"
                data-bs-toggle="modal"
                data-bs-target="#confirmUpdateModal">
            Save Changes
        </button>

        <a asp-page="/Dashboard/EmployeeManagement/index"
           class="btn btn-secondary">
            Cancel
        </a>
    </form>

    <!-- CONFIRM UPDATE MODAL -->
    <div class="modal fade"
         id="confirmUpdateModal"
         tabindex="-1"
         aria-labelledby="confirmUpdateModalLabel"
         aria-hidden="true">

        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title" id="confirmUpdateModalLabel">
                        Confirm Employee Update
                    </h5>
                    <button type="button"
                            class="btn-close"
                            data-bs-dismiss="modal">
                    </button>
                </div>

                <div class="modal-body">
                    <p>Are you sure you want to save the changes for this employee?</p>
                    <p class="text-muted mb-0">
                        This will permanently update the employee record.
                    </p>
                </div>

                <div class="modal-footer">
                    <!-- ACTUAL SUBMIT -->
                    <button type="submit"
                            class="btn btn-primary"
                            form="editEmployeeForm">
                        Yes, Update
                    </button>

                    <button type="button"
                            class="btn btn-secondary"
                            data-bs-dismiss="modal">
                        Cancel
                    </button>
                </div>

            </div>
        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
