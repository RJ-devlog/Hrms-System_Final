@page
@model HRMS_System.Pages.Account.LoginPageModel
@{
    Layout = null;

}
<script type="importmap"></script>
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/HRMS_System.styles.css" asp-append-version="true" />
    @* Add *@
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

<div class="header-logo">
    <img src="/images/hrms-logo.png" alt="HRMS" />  <!-- image Location -->
    <span>HR</span><span>MS</span>
</div>

<div class="center-area">
    <form method="post">
        <div class="login-box shadow-sm">
            <div class="login-title">LOGIN</div>

            <label>Username</label>
            <input asp-for="Users.Username" class="line-input"/>

            <label class="mt-3">Password</label>
            <input asp-for="Users.Password" type="password" class="line-input" />

            <button class="login-btn" type="submit">LOGIN</button>

            <div class="text-danger mt-2" asp-validation-summary="ModelOnly"></div>
        </div>
    </form>
</div>